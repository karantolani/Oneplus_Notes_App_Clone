<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_op</item>
        <item name="colorSecondaryVariant">#80E53935</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/red_op</item>
        <item name="colorSurface">@color/dialog_bg_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ExpandedBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <style name="CollapsedBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="OrangeCheck">
<!--        <item name="colorAccent">#935615</item>-->
        <item name="colorControlActivated">#935615</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog_Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog_Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialog_Button</item>
        <item name="background">@color/dialog_bg_color</item>
    </style>

    <style name="AlertDialog_Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dialog_btn_color</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>


</resources>